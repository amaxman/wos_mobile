<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:minHeight="50dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/item_padding_bottom_default"
    android:layout_margin="@dimen/item_margin_default"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/labMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/labStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/labEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnModify"
                android:layout_width="70dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginRight="@dimen/item_split_width_min"
                android:layout_marginLeft="@dimen/item_split_width_min"
                android:background="@drawable/btn_selector"
                android:text="@string/edit"
                />

            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="70dp"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/btn_selector"
                android:text="@string/delete"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/arrow_right"
            android:scaleType="fitXY"
            android:layout_marginEnd="3dp"
            >
        </ImageButton>

    </LinearLayout>
</LinearLayout>